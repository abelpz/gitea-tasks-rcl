{
  "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react-hooks"],
  "globals": {
    "window": true,
    "document": true,
    "console": true
